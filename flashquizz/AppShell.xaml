<Shell
    x:Class="flashquizz.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:flashquizz.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="flashquizz"
    Shell.NavBarIsVisible="False">

    <!-- pages du shell -->
    <ShellContent
        Route="menu"
        ContentTemplate="{DataTemplate pages:Menu}" />

    <ShellContent
        Route="deckGestion"
        ContentTemplate="{DataTemplate pages:DeckGestion}" />

    <ShellContent
        Route="cardPlay"
        ContentTemplate="{DataTemplate pages:CardPlay}" />

</Shell>
