<Shell
    x:Class="flashquizz.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:deck="clr-namespace:flashquizz.Pages.Deck"
    xmlns:play="clr-namespace:flashquizz.Pages.Play"
    xmlns:card="clr-namespace:flashquizz.Pages.Card"
    xmlns:pages="clr-namespace:flashquizz.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <!-- pages du shell -->
    <!-- /Pages -->
    <ShellContent
        Route="menu"
        ContentTemplate="{DataTemplate pages:Menu}" />

    <!-- /Pages/Deck -->
    <ShellContent
        Route="deckGestion"
        ContentTemplate="{DataTemplate deck:DeckGestion}" />

    <ShellContent
        Route="deckAdd"
        ContentTemplate="{DataTemplate deck:DeckAdd}" />

    <!-- /Pages/Card -->
    <ShellContent
        Route="showCard"
        ContentTemplate="{DataTemplate card:ShowCard}" />

    <ShellContent
        Route="addCard"
        ContentTemplate="{DataTemplate card:AddCard}" />

    <!-- /Pages/Play -->
    <ShellContent
        Route="deckChoice"
        ContentTemplate="{DataTemplate play:DeckChoice}" />

    <ShellContent
        Route="cardPlay"
        ContentTemplate="{DataTemplate play:CardPlay}" />
    
    <ShellContent
        Route="endGameStats"
        ContentTemplate="{DataTemplate play:EndGameStats}" />
</Shell>
